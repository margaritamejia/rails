.container
  .row
    .col-md-3
      %p.lead Filters
      .list-group
        %a.list-group-item{:href => "#"} Category 1
        %a.list-group-item{:href => "#"} Category 2
        %a.list-group-item{:href => "#"} Category 3
    .col-md-9
      .row.carousel-holder
        .col-md-12
          #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
            .carousel-inner
              .item.active
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
              .item
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
              .item
                %img.slide-image{:alt => "", :src => "http://placehold.it/800x300"}/
            %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
              %span.glyphicon.glyphicon-chevron-left
            %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
              %span.glyphicon.glyphicon-chevron-right
      .row
        - 5.times do |i|
          .col-sm-4.col-lg-4.col-md-4
            .thumbnail
              %img{:alt => "", :src => "http://placehold.it/320x150"}/
              .caption
                %h4.pull-right= "$#{rand(100)}"
                %h4
                  =link_to "#{(i+1).ordinalize} Product", emerald_path(i)
                %p This is a short description. Lorem ipsum dolor sit amet, consectetur adipiscing elit.